\end_layout

\begin_layout Enumerate
Fuerza electromotriz de la pila a 40ºC con concentraciones 
\begin_inset Formula $[Zn^{2+}]=2\cdot[Ni^{2+}]$
\end_inset


\end_layout

\end_deeper
