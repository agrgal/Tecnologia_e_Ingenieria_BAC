<column alignment="center" valignment="middle" width="0.6cm">
<column alignment="center" valignment="middle" width="0.6cm">
<column alignment="center" valignment="middle" width="0.6cm">
<column alignment="center" valignment="middle" width="0.6cm">
<column alignment="center" valignment="middle" width="0.6cm">
<column alignment="center" valignment="middle" width="0.6cm">
<row topspace="1pt" bottomspace="1pt" interlinespace="4pt">
<cell alignment="center" valignment="middle" topline="true" bottomline="true" leftline="true" usebox="none">
